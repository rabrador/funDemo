<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justdemo.vincent.functiondemo.ListActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="#00cc00"
        android:id="@+id/linearLayoutCircle">
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="140dp"
        android:id="@+id/mainList" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="@drawable/red_circle"
        android:id="@+id/imageViewWhiteCircle" />

    <TextView
        android:text="按我分類"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:id="@+id/textClass"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_light"
        android:layout_alignBottom="@+id/linearLayoutCircle"
        android:layout_alignStart="@+id/imageViewWhiteCircle"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="45dp"
        android:textStyle="normal|bold"
        android:gravity="center_horizontal"
        android:textAlignment="center" />
</RelativeLayout>
